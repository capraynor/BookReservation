@using System.Diagnostics.Eventing.Reader
@using BookReservationSystem.Entities
@model BookReservationSystem.Models.DistributionManagerViewModel
@{
    ViewBag.Title = "审核订单";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">


    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    @Styles.Render("~/Content/BootstrapCSS")
    @Styles.Render("~/Content/TeacherOrStudent.css")



</head>

<body>

<div class="container">
    <header>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">@ViewBag.Title</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
                        <li><a href="#">Link</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Action</a></li>
                                <li><a href="#">Another action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">One more separated link</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Link</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Action</a></li>
                                <li><a href="#">Another action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                            </ul>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </header>
</div>
<div class="container">

    <span class="alert-info">当前角色描述</span>  @ViewBag.CurrentUser.RoleDescription<br/>
    <span class="alert-info">登录状态</span> @ViewBag.IsLogin
    <a href="/">退出</a>

    <h3>订单状态</h3>
    <table class="table table-hover">
        <tr>
            <th>编号</th>
            <th>ISBN</th>
            <th>数量</th>
            <th>状态</th>
            <th>操作</th>
        </tr>

        @foreach (var order in Model.UnhandledOrders) {
            <tr>
                <td id="">@order.Id</td>
                <td id="">@order.ISBN</td>
                <td id="">@order.Quantity</td>
                <td id="">@order.Status</td>
                @switch (order.Status) {
                    case OrderStatus.Unhandled:
                        <td><button class="btn btn-success startDistribute" onclick="onStartDistributeButtonClicked(@order.Id)">审核通过</button></td>
                        break;
                    case OrderStatus.OutOfStock:
                        <td><button class="btn btn-danger startPurchase" >发起采购</button></td>
                        break;
                    case OrderStatus.Completed:
                        break;
                    case OrderStatus.Rejected:
                        break;
                    case OrderStatus.AwaitingDelivery:
                        break;
                    case null:
                        break;
                    default:
                        throw new ArgumentOutOfRangeException();
                }
            </tr>
        }

    </table>

    <h2>所有书目</h2>
    <table class="table table-hover">
        <tr>
            <th>编号</th>
            <th>标题</th>
            <th>ISBN</th>
            <th>库存</th>
            <th>描述</th>
            <th>操作</th>
        </tr>

        @foreach (var book in Model.Books) {
            <tr>
                <td id="bookId\@book.Id">@book.Id</td>
                <td id="bookTitle\@book.Id">@book.Title</td>
                <td id="bookISBN\@book.Id">@book.ISBN</td>
                <td id="bookQuantity\@book.Id">@book.Quantity</td>
                <td id="Description\@book.Id">@book.Description</td>
            </tr>
        }

    </table>



    
</div> <!-- /container -->
<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
<script src="/Scripts/jquery-1.10.2.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="/Scripts/DistributionManager.js"></script>
    <script src="/Scripts/ie10-viewport-bug-workaround.js.js"></script>
</body>
</html>
